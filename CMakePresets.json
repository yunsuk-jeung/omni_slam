{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "Eigen3_DIR": "${sourceDir}/libs/debug/share/eigen3/cmake"
      }
    },
    {
      "name": "vo_debug",
      "inherits": "base",
      "displayName": "Visual Odometry (Debug)",
      "description": "Build VO pipeline in Debug mode",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "OMNI_BUILD_VO": "ON",
        "OMNI_BUILD_VIO": "OFF",
        "OMNI_BUILD_LIO": "OFF",
        "OMNI_BUILD_LOOP": "OFF",
        "OMNI_BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "vo_release",
      "inherits": "base",
      "displayName": "Visual Odometry (Release)",
      "description": "Build VO pipeline in Release mode",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "OMNI_BUILD_VO": "ON",
        "OMNI_BUILD_VIO": "OFF",
        "OMNI_BUILD_LIO": "OFF",
        "OMNI_BUILD_LOOP": "OFF",
        "OMNI_BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "vo",
      "inherits": "base",
      "displayName": "Visual Odometry (RelWithDebInfo)",
      "description": "Build VO pipeline in RelWithDebInfo mode",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "OMNI_BUILD_VO": "ON",
        "OMNI_BUILD_VIO": "OFF",
        "OMNI_BUILD_LIO": "OFF",
        "OMNI_BUILD_LOOP": "OFF",
        "OMNI_BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "vio_debug",
